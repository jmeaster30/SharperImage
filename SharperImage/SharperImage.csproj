<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <Title>SharperImage</Title>
        <Authors>Lily Easterday</Authors>
        <Description>A cross-platform image encoding/decoding/processing library</Description>
        <Copyright>2023</Copyright>
        <PackageLicenseUrl>https://github.com/jmeaster30/SharperImage/blob/main/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/jmeaster30/SharperImage</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <Version>1.0.1-alpha</Version>
        <PackageId>Syrency.SharperImage</PackageId>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="Syrency.MyLib" Version="1.0.1-alpha" />
        <None Include="../README.md" Pack="true" PackagePath="/"/>
    </ItemGroup>

</Project>
